{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-md-center">
            <h1>All Videogames</h1>
        </div>
        <div class="row justify-content-end">
            {% if is_granted('ROLE_USER_DEVELOPER') %}
                <a href="{{ path('videogame_new') }}" class="btn btn-outline-primary">New Videogame</a>
            {% endif %}
        </div>
        <br>
        {% for videogame in videogames %}
            {{ include('videogame/list.html.twig', { 'videogame': videogame }) }}
        {% endfor %}


    </div>

{% endblock %}

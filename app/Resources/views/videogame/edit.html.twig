{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-10 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Videogame</h3>
                        <div class="d-flex justify-content-between">
                            <h4 class="card-subtitle mb-2 text-muted">update</h4>

                            <div class="p-2">
                                {{ form_start(delete_form, {'action': path('videogame_delete',{'id':videogame.id})}) }}
                                <input type="submit" value="Delete" class="btn btn-danger">       
                                {{ form_end(delete_form) }}
                            </div>
                        </div>

                        <div class="card-text">
                            {{ form_start(edit_form, {'action': path('videogame_edit',{'id':videogame.id}), 'method': 'POST'}) }}
                            <div class="border border-white row">
                                <label for="title"
                                       class="col-4 col-form-label">{{ form_label(edit_form.title) }}</label>
                                <div class="col-8">
                                    {{ form_widget(edit_form.title) }}
                                </div>
                            </div>
                            <div class="border border-white  row">
                                <label for="description"
                                       class="col-4 col-form-label">{{ form_label(edit_form.description) }}</label>
                                <div class="col-8">
                                    {{ form_widget(edit_form.description) }}
                                </div>
                            </div>
                            <div class="border border-white  row">
                                <label for="category"
                                       class="col-4 col-form-label">{{ form_label(edit_form.category) }}</label>
                                <div class="col-8">
                                    {{ form_widget(edit_form.category) }}
                                </div>
                            </div>
                            <div class="border border-white  row">
                                <label for="weburl"
                                       class="col-4 col-form-label">{{ form_label(edit_form.weburl) }}</label>
                                <div class="col-8">
                                    {{ form_widget(edit_form.weburl) }}
                                </div>
                            </div>
                            <div class="border border-white  row">
                                <label for="logo"
                                       class="col-4 col-form-label">{{ form_label(edit_form.logo) }}</label>
                                <div class="col-8">
                                    {{ form_widget(edit_form.logo) }}
                                </div>
                            </div>
                            <div class="d-flex ">
                                <div class="p-2">
                                    {{ form_widget(edit_form.save) }}
                                </div>
                            </div>
                        </div>
                        {{ form_end(edit_form) }}
                    </div>

                </div>

            </div>
        </div>
    </div>


 
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">

            <div class="col-8 mx-auto">

                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Category creation</h3>
                        <h4 class="card-subtitle mb-2 text-muted">Add new</h4>
                        <div class="card-text">
                            {{ form_start(form) }}
                            <div class="border border-white row">
                                <label for="name"
                                       class="col-4 col-form-label">{{ form_label(form.name) }}</label>
                                <div class="col-8">
                                    {{ form_widget(form.name) }}
                                </div>
                            </div>
                            <div class="border border-white  row">
                                <label for="description"
                                       class="col-4 col-form-label">{{ form_label(form.description) }}</label>
                                <div class="col-8">
                                    {{ form_widget(form.description) }}
                                </div>
                            </div>

                            <div class="border border-white  row">
                                <div class="col-sm-4 textarea">
                                    {{ form_widget(form.save) }}
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>

                </div>

            </div>
        </div>
    </div>
    
    
    
{% endblock %}
